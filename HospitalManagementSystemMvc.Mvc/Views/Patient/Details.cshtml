@model HospitalManagementSystemMvc.Models.Patient.PatientDetailViewModel
@{
    string title = $"Ptient {Model.Id}";
    ViewData["Title"] = title;
}

<div class="d-flex justify-content-between align-items-center mb-2">
    <h1>@title</h1>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">Edit</a>
    <a asp-controller="Patient" asp-action="Create" asp-route-patientId="@Model.Id" class="btn btn-success">Shop</a>
</div>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FirstName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FirstName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dd>
</dl>

<component type="typeof(int)" render-mode="ServerPrerendered" param-transactions="Model.Id" />

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>