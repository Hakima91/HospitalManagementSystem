@model HospitalManagementSystemMvc.Models.Department.DepartmentDetailViewModel
@{
    string title = $"Department {Model.DepartmentId}";
    ViewData["Title"] = title;
}

<div class="d-flex justify-content-between align-items-center mb-2">
    <h1>@title</h1>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-light">Edit</a>
    <a asp-controller="Department" asp-action="Create" asp-route-DepartmentId="@Model.DepartmentId" class="btn btn-success">Shop</a>
</div>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Address)
    </dd>
</dl>

<component type="typeof(int)" render-mode="ServerPrerendered" param-transactions="Model.DepartmentId" />

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>